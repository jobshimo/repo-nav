{
    "Run": {
        "Path": [ "tests/Pester" ],
        "Exit": true,
        "ExcludePath": [
            "src/**/*/_index.ps1",
            "src/**/Interfaces/*.ps1",
            "src/**/Resources/**/*.ps1",
            "src/**/Dev/*.ps1"
        ]
    },
    "Output": {
        "Verbosity": "Normal"
    },
    "CodeCoverage": {
        "Enabled": true,
        "Path": [ "src" ],
        "OutputFormat": "Jacoco",
        "OutputPath": "coverage.xml",
        "CoveragePercentTarget": 80
    }
}
