{
    "Run": {
        "Path": [ "tests/Pester" ],
        "Exit": true
    },
    "Output": {
        "Verbosity": "Normal"
    },
    "CodeCoverage": {
        "Enabled": true,
        "Path": [ "src" ],
        "ExcludeTests": [
            "**/*/_index.ps1",
            "**/Interfaces/*.ps1",
            "**/Resources/**/*.ps1",
            "**/Dev/*.ps1"
        ],
        "OutputFormat": "Jacoco",
        "OutputPath": "coverage.xml",
        "CoveragePercentTarget": 80
    }
}
